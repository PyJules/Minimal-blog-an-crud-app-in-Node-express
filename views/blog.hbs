{{>header}}
<div class="container mt-3">
    <div class="jumbotron text-center" id="bg-slider">
       <strong class="text-white border-bottom">WELCOME ON MY BLOG</strong>
    </div>

    <div class="content-article">
        <strong class="text-info">Recent articles</strong>
        <hr>
        <div class="row justify-content-between">
            {{#each results}}
            <div class="col-lg-3">
                <div class="p-1 shadow">
                    <div class="bg-light">
                        <img src="/static/uploads/{{ image }}" alt="" height="100%" width="100%">
                        <div class="p-2">
                            <a href="/posts/{{id}}" class="">
                                <p class="text-info"> {{title}} </p>
                            </a>
                            <div>
                                Lorem ipsum dolor sit amet consectetur, adipisicing elit. Quod tenetur esse beatae.
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
